<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cs_item"
    android:layout_width="150dp"
    android:layout_height="200dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_city_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/global_img"
        card_view:layout_constraintBottom_toTopOf="@+id/cs_title"
        card_view:riv_corner_radius="100dp"
        card_view:riv_border_color="@color/radio_item_border"
        card_view:riv_border_width="0.75dp"
        card_view:layout_constraintDimensionRatio="1:1"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_weight="8"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/image_city_item"
        card_view:layout_constraintVertical_weight="2.5">

        <TextView
            android:id="@+id/tv_cityhome_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="Country"
            android:textColor="@color/radio_text_color"
            android:textSize="11sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toTopOf="@+id/tv_cityhome_text_city"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.39"
            card_view:layout_constraintVertical_chainStyle="spread" />

        <TextView
            android:id="@+id/tv_cityhome_text_city"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="City name"
            android:textColor="@color/radio_subtext_color"
            android:textSize="10sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_cityhome_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>