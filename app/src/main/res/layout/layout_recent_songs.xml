<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_items"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_songlist"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view2"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_songlist"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="10dp" />

            <es.claucookie.miniequalizerlibrary.EqualizerView
                android:id="@+id/equalizer_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:paddingStart="16dp"
                android:paddingTop="20dp"
                android:paddingEnd="16dp"
                android:paddingBottom="20dp"
                app:animDuration="3500"
                app:foregroundColor="@color/primary" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_songlist_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:textColor="@color/text_title"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_songlist_cat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_songlist_cat"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:maxLines="1"
                    android:textColor="@color/text_desc"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_songlist_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_songlist_option"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ripple"
                android:contentDescription="@string/image_content"
                android:padding="5dp"
                android:src="@mipmap/ic_more"
                app:tint="@color/black_dark" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_native_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/white"
        android:visibility="gone">

    </RelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <RatingBar
            android:id="@+id/rb_songlist"
            style="@style/RatingBar_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:max="5"
            android:numStars="5"
            android:theme="@style/RatingBar_black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_songlist_avg_rate"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/bg_round_green"
            android:gravity="center"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/views" />

        <TextView
            android:id="@+id/tv_songlist_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:gravity="center"
            android:text="25"
            android:textColor="@color/text_desc"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/iv_downlaod_icon"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:src="@mipmap/download_arrow" />

        <TextView
            android:id="@+id/tv_songlist_downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:gravity="center"
            android:text="25"
            android:textColor="@color/text_desc"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_songlist_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/text_duration"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>