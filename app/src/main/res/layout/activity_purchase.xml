<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PurchaseActivity"
    android:background="#F0EAFB">

    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_back"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintHeight_percent="0.06"
        app:tint="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/top_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/in_app_purchase_img"
        app:layout_constraintBottom_toTopOf="@+id/tv_title"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintHeight_percent="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_img"
        android:text="Get Premium With No Ads"
        android:maxLines="1"
        android:autoSizeMaxTextSize="27sp"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_purchase"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/cost_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="#F0EAFB"
            android:scaleType="centerCrop"
            app:layout_constraintVertical_bias="0.15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="50dp"
            />

        <ImageView
            android:id="@+id/ic_cost1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/cd"
            app:layout_constraintBottom_toBottomOf="@+id/cost_1"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/cost_1"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="@+id/cost_1"
            app:layout_constraintTop_toTopOf="@id/cost_1"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/cost_1"
            app:layout_constraintEnd_toEndOf="@id/cost_1"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toEndOf="@+id/ic_cost1"
            app:layout_constraintTop_toTopOf="@id/cost_1"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="1.99$"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"/>


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/cost_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="#F0EAFB"
            android:scaleType="centerCrop"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="50dp"
            />

        <ImageView
            android:id="@+id/ic_cost2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/cd"
            app:layout_constraintBottom_toBottomOf="@+id/cost_2"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/cost_2"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="@+id/cost_2"
            app:layout_constraintTop_toTopOf="@id/cost_2"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/cost_2"
            app:layout_constraintEnd_toEndOf="@id/cost_2"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toEndOf="@+id/ic_cost2"
            app:layout_constraintTop_toTopOf="@id/cost_2"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="5.99$"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"/>


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/cost_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="#F0EAFB"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="50dp"
            app:layout_constraintVertical_bias="0.85"
            />

        <ImageView
            android:id="@+id/ic_cost3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/cd"
            app:layout_constraintBottom_toBottomOf="@+id/cost_3"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/cost_3"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="@+id/cost_3"
            app:layout_constraintTop_toTopOf="@id/cost_3"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/cost_3"
            app:layout_constraintEnd_toEndOf="@id/cost_3"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toEndOf="@+id/ic_cost3"
            app:layout_constraintTop_toTopOf="@id/cost_3"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="10.99$"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"/>





    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>