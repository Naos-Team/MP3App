<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    tools:context="com.naosteam.countrymusic.HomeActivity">


    <ImageView
        android:id="@+id/setting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_setting_home1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.035"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:tint="@color/white"
        android:src="@drawable/bookmark_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.035"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/home_user"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.035"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_premium"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.035"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/premium"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/home_crown"
            app:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintHorizontal_bias="0.89"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.07"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Try Plus"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/premium"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintHorizontal_bias="0.9"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.07" />
    </androidx.constraintlayout.widget.ConstraintLayout>





    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/mp3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:riv_corner_radius="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/home_ringtone"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/radio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.85" />

    <ImageView
        android:id="@+id/mp3_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_btn_home"
        app:layout_constraintBottom_toBottomOf="@+id/mp3"
        app:layout_constraintEnd_toEndOf="@+id/mp3"
        app:layout_constraintStart_toStartOf="@+id/mp3"
        app:layout_constraintTop_toTopOf="@+id/mp3"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical"
        android:text="Music"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/mp3"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toStartOf="@+id/ic_open_mp3"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@id/mp3"
        app:layout_constraintTop_toTopOf="@id/mp3"
        app:layout_constraintVertical_bias="0.8" />

    <ImageView
        android:id="@+id/ic_open_mp3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_fav_mp3"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/mp3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/mp3"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@id/mp3"
        app:layout_constraintTop_toTopOf="@+id/mp3"
        app:layout_constraintVertical_bias="0.8" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/radio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/home_radio"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/ringtone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:riv_corner_radius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mp3"
        app:layout_constraintWidth_percent="0.85" />

    <ImageView
        android:id="@+id/radio_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_btn_home"
        app:layout_constraintBottom_toBottomOf="@+id/radio"
        app:layout_constraintEnd_toEndOf="@+id/radio"
        app:layout_constraintStart_toStartOf="@+id/radio"
        app:layout_constraintTop_toTopOf="@+id/radio"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/ic_open_radio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:tint="@color/white"
        android:src="@drawable/ic_fav_radio"
        app:layout_constraintBottom_toBottomOf="@id/radio"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/radio"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@id/radio"
        app:layout_constraintTop_toTopOf="@+id/radio"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical"
        android:text="Radio"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/radio"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toStartOf="@+id/ic_open_radio"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@id/radio"
        app:layout_constraintTop_toTopOf="@id/radio"
        app:layout_constraintVertical_bias="0.8" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ringtone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/home_ringtone1"
        android:scaleType="centerCrop"
        app:riv_corner_radius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio"
        app:layout_constraintWidth_percent="0.85" />

    <ImageView
        android:id="@+id/ringtone_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_btn_home"
        app:layout_constraintBottom_toBottomOf="@+id/ringtone"
        app:layout_constraintEnd_toEndOf="@+id/ringtone"
        app:layout_constraintStart_toStartOf="@+id/ringtone"
        app:layout_constraintTop_toTopOf="@+id/ringtone"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/ic_open_ringtone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:tint="@color/white"
        android:src="@drawable/ic_fav_ringtone"
        app:layout_constraintBottom_toBottomOf="@id/ringtone"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/ringtone"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@id/ringtone"
        app:layout_constraintTop_toTopOf="@+id/ringtone"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical"
        android:text="Ringtone"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/ringtone"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toStartOf="@+id/ic_open_ringtone"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@id/ringtone"
        app:layout_constraintTop_toTopOf="@id/ringtone"
        app:layout_constraintVertical_bias="0.8" />




</androidx.constraintlayout.widget.ConstraintLayout>