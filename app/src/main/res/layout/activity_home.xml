<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.zxfdwka.bestcountrymusic.HomeActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="35sp"
        android:autoSizeMinTextSize="19sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_setting_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.045"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/love_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.045"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/user_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.045"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <ImageView
        android:id="@+id/mp3"
        android:layout_marginBottom="30dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_home"
        app:layout_constraintBottom_toTopOf="@+id/radio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Music"
        android:textColor="@color/white"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@id/mp3"
        app:layout_constraintBottom_toBottomOf="@id/mp3"
        app:layout_constraintEnd_toStartOf="@+id/ic_open_mp3"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintDimensionRatio="2:1"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/mp3"
        />

    <ImageView
        android:id="@+id/ic_open_mp3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_open_mp3"
        app:layout_constraintBottom_toBottomOf="@id/mp3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/mp3"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="@id/mp3"
        app:layout_constraintTop_toTopOf="@+id/mp3" />

    <ImageView
        android:id="@+id/radio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_home"
        app:layout_constraintBottom_toTopOf="@+id/ringtone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mp3"
        app:layout_constraintWidth_percent="0.8" />

    <ImageView
        android:id="@+id/ic_open_radio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_open_radio"
        app:layout_constraintBottom_toBottomOf="@id/radio"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/radio"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="@id/radio"
        app:layout_constraintTop_toTopOf="@+id/radio" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Radio"
        android:textColor="@color/white"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@id/radio"
        app:layout_constraintBottom_toBottomOf="@id/radio"
        app:layout_constraintEnd_toStartOf="@+id/ic_open_radio"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintDimensionRatio="2:1"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/radio"
        />

    <ImageView
        android:id="@+id/ringtone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio"
        app:layout_constraintWidth_percent="0.8" />

    <ImageView
        android:id="@+id/ic_open_ringtone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_open_ringtone"
        app:layout_constraintBottom_toBottomOf="@id/ringtone"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/ringtone"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="@id/ringtone"
        app:layout_constraintTop_toTopOf="@+id/ringtone" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Ringtone"
        android:textColor="@color/white"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@id/ringtone"
        app:layout_constraintBottom_toBottomOf="@id/ringtone"
        app:layout_constraintEnd_toStartOf="@+id/ic_open_ringtone"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintDimensionRatio="2:1"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/ringtone"
        />


</androidx.constraintlayout.widget.ConstraintLayout>